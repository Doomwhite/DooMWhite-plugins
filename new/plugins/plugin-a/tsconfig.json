{
  "compilerOptions": {
	"module": "esnext",        // Ensure TypeScript outputs ES modules
	"target": "esnext",        // Use a modern target for better compatibility
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"],
  "references": [
    {
      "path": "../../core-module"
    }
  ]
}
