{
  "name": "obsidian-plugins",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build:core-module": "cd core-module && npm run build",
    "link:core-module": "cd core-module && npm link",
    "preinstall": "npm run link:core-module && cd plugins/plugin-a && npm link core-modules",
    "build": "npm run build:core-module && npm run build:plugin-a",
    "build:plugin-a": "cd plugins/plugin-a && npm run build"
  },
  "workspaces": [
    "core-module",
    "plugins/*"
  ],
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "esbuild": "^0.24.0",
    "eslint": "^9.17.0",
    "obsidian": "^1.7.2",
    "prettier": "^3.4.2",
    "rollup": "^4.28.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.2"
  }
}
